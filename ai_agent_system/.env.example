# AI Agent System Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration (MariaDB on Pi 5)
DB_HOST=192.168.3.110
DB_USER=rfid_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=rfid_inventory
DB_PORT=3306

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Ollama LLM Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b-instruct
OLLAMA_TIMEOUT=300
OLLAMA_GPU_LAYERS=35

# API Security
API_SECRET_KEY=generate_a_secure_random_key_here
JWT_SECRET_KEY=another_secure_random_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Pi 5 Integration
PI5_BASE_URL=http://192.168.3.110:5000
PI5_API_KEY=your_pi5_api_key_here
PI5_WEBHOOK_URL=http://192.168.3.110:5000/api/ai-insights

# External API Keys
OPENWEATHER_API_KEY=your_openweather_api_key
NOAA_API_KEY=your_noaa_api_key
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Minnesota State Fair API (if available)
MN_STATE_FAIR_API_KEY=your_mn_state_fair_api_key

# Minneapolis Open Data
MINNEAPOLIS_API_KEY=your_minneapolis_api_key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/ai-agent.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Performance Configuration
MAX_QUERY_TIME_SECONDS=30
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_REQUESTS=50
WORKER_CONCURRENCY=4

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.8

# Monitoring
PROMETHEUS_PORT=8090
GRAFANA_PASSWORD=secure_grafana_password

# Development/Production Mode
ENVIRONMENT=production
DEBUG=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Business Configuration
BUSINESS_TIMEZONE=America/Chicago
BUSINESS_HOURS_START=6
BUSINESS_HOURS_END=20

# A1 Rent It Store Locations
STORE_WAYZATA_ID=1
STORE_BROOKLYN_PARK_ID=2
STORE_FRIDLEY_ID=3
STORE_ELK_RIVER_ID=4

# Equipment Categories
CONSTRUCTION_CATEGORY_WEIGHT=0.7
EVENT_CATEGORY_WEIGHT=0.3

# Analytics Configuration
MIN_CONFIDENCE_THRESHOLD=0.8
MAX_INSIGHTS_PER_QUERY=10
CORRELATION_DISCOVERY_ENABLED=true

# Security Headers
CORS_ORIGINS=http://192.168.3.110:5000,http://localhost:3000
ALLOWED_HOSTS=192.168.3.110,localhost,ai-agent-core