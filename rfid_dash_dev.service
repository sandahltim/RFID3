[Unit]
Description=RFID Dashboard Flask App
After=network.target mariadb.service

[Service]
User=tim
Group=www-data
WorkingDirectory=/home/tim/test_rfidpi
Environment="PATH=/home/tim/test_rfidpi/venv/bin:/usr/bin"
Environment="APP_IP=192.168.3.112"
ExecStart=/home/tim/test_rfidpi/venv/bin/gunicorn --workers 1 --threads 4 --timeout 600 --bind 0.0.0.0:3607 --error-logfile /home/tim/test_rfidpi/logs/gunicorn_error.log --access-logfile /home/tim/test_rfidpi/logs/gunicorn_access.log run:app
ExecStop=/bin/kill -s KILL $MAINPID
Restart=always
KillMode=mixed
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
