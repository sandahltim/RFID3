# RFID Operations API Configuration - Development
# Copy from .env.example and update for your environment

# Database Configuration
DATABASE_URL=mysql+pymysql://rfid_user:rfid_user_password@localhost/rfid_operations_db
MANAGER_DATABASE_URL=mysql+pymysql://rfid_user:rfid_user_password@localhost/rfid_inventory

# API Configuration
API_HOST=0.0.0.0
API_PORT=8444
API_RELOAD=true

# Security Configuration
SECRET_KEY=rfid_ops_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# SSL Configuration (for HTTPS)
SSL_KEYFILE=/etc/ssl/private/pi5-rfid3.key
SSL_CERTFILE=/etc/ssl/certs/pi5-rfid3.crt

# Tailscale/Network Configuration
TAILSCALE_IP=100.103.67.41
MANAGER_API_URL=http://100.103.67.41:8101
OPERATIONS_UI_URL=https://100.103.67.41:443

# Sync Configuration
SYNC_INTERVAL_SECONDS=300
BATCH_SIZE=1000
MAX_RETRIES=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/home/tim/RFID3/logs/operations_api.log

# Development vs Production
ENVIRONMENT=development